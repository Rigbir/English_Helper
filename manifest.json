{
    "name": "Wordly",
    "version": "6.5",
    "description": "Extension",
    "manifest_version": 3,
    "permissions": [
        "alarms", 
        "notifications", 
        "storage"
    ],
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["core/functional.js"]
        }
    ],
    "background": {
        "service_worker": "core/background.js"
    },
    "action": {
        "default_icon": "image/yellow.png",
        "default_popup": "views/popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["image/*"],
            "matches": ["<all_urls>"]
        }
    ]
}